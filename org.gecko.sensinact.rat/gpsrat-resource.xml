<resourceInfos xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://org.eclipse.sensinact/resource" xsi:schemaLocation="http://org.eclipse.sensinact/resource ../../../../../platform/sensinact-generic/src/main/resources/sensinact-resource.xsd">
  <resourceInfo xsi:type="resourceInfoProperty" name="ICON" target="admin">
    <identifier xsi:type="stringContent">ICON</identifier>
    <attributes>
      <attribute modifiable="FIXED" name="value" type="String">
        <value>gpsrat</value>
      </attribute>
    </attributes>
  </resourceInfo>
  <resourceInfo xsi:type="resourceInfoProperty" name="LOCATION" target="admin">
    <identifier xsi:type="stringContent">location</identifier>
    <attributes>
      <attribute modifiable="MODIFIABLE" name="value" type="String"/>
    </attributes>
  </resourceInfo>
  <resourceInfo xsi:type="resourceInfoSensor" name="SPEED" target="position">
    <identifier xsi:type="stringContent">speed</identifier>
    <attributes>
      <attribute modifiable="MODIFIABLE" name="value" type="double">
        <constraints>
          <minInclusive xsi:type="constraintOnNumeric" value="0"/>
        </constraints>
      </attribute>
    </attributes>
  </resourceInfo>
  <resourceInfo xsi:type="resourceInfoSensor" name="ORIENTATION" target="position">
    <identifier xsi:type="stringContent">orientation</identifier>
    <attributes>
      <attribute name="value" type="double">
        <metadata>
          <meta name="Description" type="string">
            <value>Geographic orientation in degrees</value>
          </meta>
        </metadata>
        <constraints>
          <minInclusive xsi:type="constraintOnNumeric" value="0"/>
          <maxInclusive xsi:type="constraintOnNumeric" value="360"/>
        </constraints>
      </attribute>
    </attributes>
  </resourceInfo>
  <resourceInfo xsi:type="resourceInfoSensor" name="TIMESTAMP" target="position">
    <identifier xsi:type="stringContent">timestamp</identifier>
    <attributes>
      <attribute name="value" type="int">
        <metadata>
          <meta name="Description" type="string">
            <value>UTC GPS timestamp in seconds</value>
          </meta>
        </metadata>
      </attribute>
    </attributes>
  </resourceInfo>
</resourceInfos>